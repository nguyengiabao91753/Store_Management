<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Product List</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Product</a></li>
                    <li class="breadcrumb-item active">List</li>
                </ol>
            </div>
        </div>

        <!-- Hiển thị thông báo thành công / lỗi -->
        @if (TempData["success"] != null)
        {
            <div class="alert alert-success">@TempData["success"]</div>
        }
        else if (TempData["err"] != null)
        {
            <div class="alert alert-danger">@TempData["err"]</div>
        }
    </div>
</section>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h3 class="card-title">Danh sách sản phẩm</h3>
                        <a class="btn btn-outline-primary" asp-controller="product" asp-action="create">
                            <i class="fas fa-plus"></i> Add Product
                        </a>
                    </div>

                    <div class="card-body">
                        <table id="example1" class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Name</th>
                                    <th>Category</th>
                                    <th>Supplier</th>
                                    <th>Image</th>
                                    <th>Barcode</th>
                                    <th>Price</th>
                                    <th>Unit</th>
                                    <th>Created At</th>
                                    <th style="width: 150px;">Actions</th>
                                </tr>
                            </thead>

                            <tbody>
                                @if (ViewBag.Products != null)
                                {
                                    foreach (var s in ViewBag.Products)
                                    {
                                        <tr>
                                            <td>@s.ProductId</td>
                                            <td>@s.ProductName</td>
                                            <td>@s.Category?.CategoryName</td>
                                            <td>@s.Supplier?.Name</td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(s.ProductImage))
                                                {
                                                    <img src="@Url.Content("~/uploads/" + s.ProductImage)" alt="Image" style="width:60px; height:60px; object-fit:cover; border-radius:6px;" />
                                                }
                                                else
                                                {
                                                    <span class="text-muted">No Image</span>
                                                }
                                            </td>
                                            <td>@s.Barcode</td>
                                            <td>@String.Format("{0:N0}", s.Price) ₫</td>
                                            <td>@s.Unit</td>
                                            <td>@s.CreatedAt?.ToString("dd/MM/yyyy HH:mm")</td>

                                            <td class="text-center">
                                                <div class="btn-group" role="group">
                                                    <a asp-controller="product" asp-action="detail" asp-route-id="@s.ProductId"
                                                       class="btn btn-sm btn-outline-primary" data-toggle="tooltip" title="View Detail">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <a asp-controller="product" asp-action="edit" asp-route-id="@s.ProductId"
                                                       class="btn btn-sm btn-outline-warning" data-toggle="tooltip" title="Edit Product">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <a asp-controller="product"
                                                       asp-action="delete"
                                                       asp-route-id="@s.ProductId"
                                                       class="btn btn-sm btn-outline-danger btn-delete"
                                                       data-toggle="tooltip"
                                                       title="Delete Product">
                                                        <i class="fas fa-trash-alt"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr><td colspan="10" class="text-center text-muted">No products found</td></tr>
                                }
                            </tbody>

                            <tfoot>
                                <tr>
                                    <th>ID</th>
                                    <th>Name</th>
                                    <th>Category</th>
                                    <th>Supplier</th>
                                    <th>Image</th>
                                    <th>Barcode</th>
                                    <th>Price</th>
                                    <th>Unit</th>
                                    <th>Created At</th>
                                    <th>Actions</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<form id="deleteForm" method="post" style="display:none;">
    @Html.AntiForgeryToken()
</form>
<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Bắt tất cả link có class 'btn-delete'
        document.querySelectorAll('.btn-delete').forEach(link => {
            link.addEventListener('click', function (e) {
                e.preventDefault(); // Ngăn trình duyệt chuyển hướng GET
                const url = this.getAttribute('href');

                if (confirm("Are you sure you want to delete this product?")) {
                    const form = document.getElementById('deleteForm');
                    form.action = url;
                    form.submit();
                }
            });
        });
    });
</script>