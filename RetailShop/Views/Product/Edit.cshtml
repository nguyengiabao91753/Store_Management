﻿@{

    ViewData["product"] = "menu-open";
    ViewData["product-create"] = "active";
}
@model RetailShop.Models.Product

@section csslinks {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" integrity="sha384-k6RqeWeci5ZR/Lv4MR0sA0FfDOMhUs4iqYMyJs31/0Y2mRmGJXLbBICF/xS9WSjb" crossorigin="anonymous">

}

@section jslinks {

}

<form method="post" asp-controller="product" asp-action="update">
    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Edit Product Information</h3>

            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                    <i class="fas fa-minus"></i>
                </button>
                <button type="button" class="btn btn-tool" data-card-widget="remove" title="Remove">
                    <i class="fas fa-times"></i>
                </button>
            </div>
        </div>

        <div class="card-body">
            <div class="row form">
                <div class="col-md ">
                    <div class="form-group" hidden>
                        <input type="text" class="form-control" name="productId" asp-for="ProductId" required>
                    </div>
                    <div class="form-group">
                        <label>ProductName</label>
                        <input type="text" class="form-control" asp-for="ProductName" required>
                    </div>

                    <div class="form-group">
                        <label>Suppier</label>
                        <select class="form-control" asp-for="SupplierId" required>
                            <option value="1">Hào đẹp trai 1</option>
                            <option value="2">Hào đẹp trai 2</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label>Category</label>
                        <select class="form-control" asp-for="CategoryId" required>
                            <option value="1">Hào đẹp trai 1</option>
                            <option value="2">Hào đẹp trai 2</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label>ProductImage</label>
                        <input type="file" class="form-control" asp-for="ProductImage" required>
                    </div>

                    <div class="form-group">
                        <label>Barcode</label>
                        <input type="text" class="form-control" asp-for="Barcode" required>
                    </div>

                    <div class="form-group">
                        <label>Price</label>
                        <input type="text" class="form-control" asp-for="Price" required>
                    </div>

                    <div class="form-group">
                        <label>Unit</label>
                        <input type="text" class="form-control" asp-for="Unit" required>
                    </div>

                    <div class="form-group">
                        <label>CreatedAt</label>
                        <input type="datetime" class="form-control" asp-for="CreatedAt" required>
                    </div>

                </div>


            </div>




        </div>


        <div class="card-footer">
            <button type="submit" class="btn btn-primary">Update</button>
        </div>
    </div>

    <!-- /.card -->
</form>