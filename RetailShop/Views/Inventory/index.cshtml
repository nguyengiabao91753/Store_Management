@model List<RetailShop.Models.InventoryStatisticModel>

@{
    ViewData["Title"] = "Thống kê tồn kho";
    Layout = "_Layout";
}

<div class="container mt-4">
    <h4 class="fw-bold mb-3">Thống kê tồn kho</h4>

    <form method="get" class="row g-2 mb-4">
        <div class="col-md-3">
            <input type="date"
                   name="fromDate"
                   class="form-control"
                   value="@Context.Request.Query["fromDate"]" />
        </div>
        <div class="col-md-3">
            <input type="date"
                   name="toDate"
                   class="form-control"
                   value="@Context.Request.Query["toDate"]" />
        </div>
        <div class="col-md-2">
            <button class="btn btn-primary w-100">Lọc</button>
        </div>
    </form>

    <table class="table table-hover align-middle">
        <thead class="table-light">
            <tr>
                <th>Thứ hạng</th>
                <th>Thông tin sản phẩm</th>
                <th class="text-end">Tồn kho</th>
                <th class="text-end">Đã bán</th>
                <th class="text-end">Còn lại</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr class="@(item.IsLowStock ? "table-danger" : "")"
                    style="cursor:pointer"
                    onclick="location.href='@Url.Action("Detail", "Product", new { id = item.ProductId })'">
                    <td>@item.Rank</td>
                    <td>
                        <div class="d-flex align-items-center gap-2">
                            <img src="/uploads/@item.Image" width="55" class="rounded" />
                            <div>
                                <div class="fw-bold">@item.ProductName</div>
                                <small class="text-muted">
                                    @item.ProductPrice.ToString("#,##0") đ
                                </small>
                            </div>
                        </div>
                    </td>
                    <td class="text-end">@item.StockQuantity</td>
                    <td class="text-end">@item.SoldQuantity</td>
                    <td class="text-end">
                        <span class="@(item.IsLowStock ? "text-danger fw-bold" : "")">
                            @item.RemainingQuantity
                        </span>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <h3 class="fw-bold mt-5 text-danger">CHÚ Ý</h3>

    <table class="table table-hover align-middle">
        <thead class="table-light">
            <tr>
                <th>Tên sản phẩm</th>
                <th class="text-end">Số lượng còn lại</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var low in Model.Where(x => x.IsLowStock))
            {
                <tr style="cursor:pointer"
                    onclick="location.href='@Url.Action("Detail", "Product", new { id = low.ProductId })'">
                    <td>@low.ProductName</td>
                    <td class="text-end">
                        <span class="text-danger fw-bold">@low.RemainingQuantity</span>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>
