@model IEnumerable<RetailShop.Models.User>

    @{
    ViewData["Title"] = "Danh sách người dùng";
    }

    <h1>Danh sách User</h1>

    <p>
        <a asp-action="Create" class="btn btn-primary">Tạo mới User</a>
    </p>

    @* Hiển thị thông báo thành công/thất bại từ Controller *@
    @if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
    @if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Username)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FullName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Role)
                </th>
                <th>
                    Trạng thái
                </th>
                <th>
                    Thao tác
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Username)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Role)
                </td>
                <td>
                    @if (item.Active)
                    {
                    <span class="badge badge-success">Hoạt động</span>
                    }
                    else
                    {
                    <span class="badge badge-danger">Đã khóa</span>
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.UserId" class="btn btn-sm btn-warning">Sửa</a> 
                    <a asp-action="Details" asp-route-id="@item.UserId" class="btn btn-sm btn-info">Chi tiết</a> 

                    @if (item.Active)
                    {
                    @*Hiển thị nút Khóa khi User đang Hoạt động*@
                    <a asp-action="Lock" asp-route-id="@item.UserId" class="btn btn-sm btn-danger"
                       onclick="return confirm('Bạn chắc chắn muốn KHÓA User: @item.FullName không?');">Khóa</a>
                    }
                    else
                    {
                    @* Bắt buộc sử dụng thẻ <text> hoặc đảm bảo không có khoảng trắng/dòng trống nếu mã HTML phức tạp *@
                    @* Ở đây, không cần <text> vì thẻ <a> là thẻ HTML duy nhất trong khối else *@
                    <a asp-action="Restore" asp-route-id="@item.UserId" class="btn btn-sm btn-success"
                       onclick="return confirm('Bạn chắc chắn muốn KHÔI PHỤC User: @item.FullName không?');">Khôi phục</a>
                    }
                    <form asp-action="Delete" asp-route-id="@item.UserId" method="post" style="display:inline;" onsubmit="return confirm('Bạn chắc chắn muốn xóa User: @item.FullName không?');">
                        <button type="submit" class="btn btn-sm btn-danger">Xóa Vĩnh Viễn</button>
                    </form>
                </td>
            </tr>
        }
        </tbody>
    </table>
