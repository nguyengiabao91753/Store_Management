@model RetailShop.Models.User

@{
    ViewData["Title"] = $"Chi tiết Người dùng: {Model.FullName}";
    // Thêm các ViewData cho menu nếu cần
    // ViewData["user"] = "menu-open";
    // ViewData["user-list"] = "active";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">@ViewData["Title"]</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-action="Index">Danh sách User</a></li>
                    <li class="breadcrumb-item active">Chi tiết</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-8 offset-md-2">
                @* Căn giữa và thu hẹp card (giống Create)*@
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Thông tin chi tiết</h3>

                        <div class="card-tools">
                            <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                                <i class="fas fa-minus"></i>
                            </button>
                        </div>
                    </div>

                    <div class="card-body">
                        @* Sử dụng DL (Description List) cho chi tiết *@
                        <dl class="row">
                            <dt class="col-sm-4">ID</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.UserId)</dd>

                            <dt class="col-sm-4">Tên đăng nhập</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.Username)</dd>

                            <dt class="col-sm-4">Họ và tên</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.FullName)</dd>

                            <dt class="col-sm-4">Quyền</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.Role)</dd>

                            <dt class="col-sm-4">Ngày tạo</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.CreatedAt)</dd>

                            <dt class="col-sm-4">Trạng thái</dt>
                            <dd class="col-sm-8">
                                @(Model.Active ? "Đang hoạt động" : "Đã Khóa")
                            </dd>
                        </dl>
                    </div>

                    <div class="card-footer">
                        <a asp-action="Edit" asp-route-id="@Model.UserId" class="btn btn-primary">Chỉnh sửa</a>
                        <a asp-action="Index" class="btn btn-secondary ml-2">Quay lại danh sách</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>