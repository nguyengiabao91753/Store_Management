@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>FastCart - Point of Sale</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="@(Url.Content("~/css/Login.css"))" asp-append-version="true" />
</head>

<body>
    <div class="auth-container">
        <!-- Left Side -->
        <div class="auth-left">
            <div class="auth-left-content">
                <img src="https://images.unsplash.com/photo-1556742049-0cfed4f6a45d?w=800&q=80" alt="POS System" class="pos-image" />
                <h2>Modern Point of Sale System</h2>
                <p>Streamline your retail operations with our powerful and intuitive POS solution</p>
            </div>
        </div>

        <!-- Right Side -->
        <div class="auth-right">
            <div class="logo">
                <i class="fas fa-shopping-cart"></i>
                <span class="logo-text">FastCart</span>
            </div>

            <div class="auth-form active" id="loginForm">
                <div class="auth-title">
                    <h3>Point Of Sale</h3>
                    <h2>Sign-In</h2>
                </div>

                <form onsubmit="handleLogin(event)">
                    <div class="form-group">
                        <label class="form-label">Employee Email</label>
                        <div class="input-wrapper">
                            <input type="email" class="form-input" placeholder="Enter your email" required />
                            <i class="far fa-envelope input-icon"></i>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="form-label">Password</label>
                        <div class="input-wrapper">
                            <input type="password" class="form-input" id="loginPassword" placeholder="Enter your password" required />
                            <i class="fas fa-lock input-icon" style="cursor:pointer;" onclick="togglePassword('loginPassword')"></i>
                        </div>
                    </div>

                    <div class="forgot-password">
                        <a href="#">Forgot Password?</a>
                    </div>

                    <button type="submit" class="btn-login">Login</button>
                </form>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function togglePassword(inputId) {
            const input = document.getElementById(inputId);
            const icon = input.nextElementSibling;

            if (input.type === 'password') {
                input.type = 'text';
                icon.classList.replace('fa-lock', 'fa-lock-open');
            } else {
                input.type = 'password';
                icon.classList.replace('fa-lock-open', 'fa-lock');
            }
        }

        function handleLogin(event) {
            event.preventDefault();
            const email = event.target.querySelector('input[type="email"]').value;
            const password = event.target.querySelector('input[type="password"]').value;
            console.log('Login:', { email, password });
            alert('Login successful! Redirecting to dashboard...');
        }
    </script>
</body>
</html>
