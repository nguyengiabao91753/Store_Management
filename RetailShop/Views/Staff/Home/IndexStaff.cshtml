@{
    ViewData["Title"] = "Point of Sales";
    Layout = "~/Views/Staff/Shared/_LayoutStaff.cshtml";
}

@section csslinks {
    <link href="~/css/Staff/pos.css" rel="stylesheet" />
}

<!-- Products Section -->
<div class="products-section">
    <!-- Category Tabs -->
    <div class="category-tabs">
        <button class="category-tab active" data-category="all">
            <i class="fas fa-utensils"></i>
            <span class="category-name">All Menu</span>
            <span class="category-count">110 Items</span>
        </button>
        <button class="category-tab" data-category="bread">
            <i class="fas fa-bread-slice"></i>
            <span class="category-name">Breads</span>
            <span class="category-count">20 Items</span>
        </button>
        <button class="category-tab" data-category="cake">
            <i class="fas fa-birthday-cake"></i>
            <span class="category-name">Cakes</span>
            <span class="category-count">20 Items</span>
        </button>
        <button class="category-tab" data-category="donut">
            <i class="fas fa-cookie"></i>
            <span class="category-name">Donuts</span>
            <span class="category-count">20 Items</span>
        </button>
        <button class="category-tab" data-category="pastry">
            <i class="fas fa-cookie-bite"></i>
            <span class="category-name">Pastries</span>
            <span class="category-count">20 Items</span>
        </button>
        <button class="category-tab" data-category="sandwich">
            <i class="fas fa-hamburger"></i>
            <span class="category-name">Sandwich</span>
            <span class="category-count">20 Items</span>
        </button>
    </div>

    <!-- Search Box -->
    <div class="search-box">
        <i class="fas fa-search"></i>
        <input type="text" placeholder="Search something sweet on your mind..." id="searchInput">
    </div>

    <!-- Products Grid -->
    <div class="products-grid" id="productsGrid">
        <!-- Products will be generated by JavaScript -->
    </div>
</div>

<!-- Order Sidebar -->
<div class="order-sidebar">
    <div class="order-header">
        <div>
            <div class="order-title" id="orderCustomerName">Customer's Name</div>
            <div class="order-number">Order Number: #<span id="orderNumber">0000</span></div>
        </div>
        <i class="fas fa-edit" style="cursor: pointer; color: var(--text-gray);"></i>
    </div>

    <div class="order-selects">
        <select id="tableSelect">
            <option>Select Table</option>
            <option>Table 01</option>
            <option>Table 02</option>
            <option>Table 03</option>
            <option>Table 04</option>
            <option>Table 05</option>
        </select>
        <select id="orderType">
            <option>Order Type</option>
            <option>Dine In</option>
            <option>Take Away</option>
            <option>Delivery</option>
        </select>
    </div>

    <div class="order-items" id="orderItems">
        <div class="empty-order">
            <i class="fas fa-shopping-basket"></i>
            <div>No Item Selected</div>
        </div>
    </div>

    <div class="order-summary">
        <div class="summary-row">
            <span>Subtotal</span>
            <span>$ <span id="subtotal">0.00</span></span>
        </div>
        <div class="summary-row">
            <span>Tax 10%</span>
            <span>$ <span id="tax">0.00</span></span>
        </div>
        <div class="summary-row discount" id="discountRow" style="display: none;">
            <span>Discount</span>
            <span>- $ <span id="discount">0.00</span></span>
        </div>
        <div class="summary-row total">
            <span>TOTAL</span>
            <span>$ <span id="total">0.00</span></span>
        </div>

        <div class="order-actions">
            <button class="btn-voucher">
                <i class="fas fa-tag"></i> Add Promo or Voucher
            </button>
            <button class="btn-payment">
                <i class="fas fa-credit-card"></i> Payment Method
            </button>
        </div>

        <button class="btn-place-order" onclick="placeOrder()">Place Order</button>
    </div>
</div>

<button class="btn-track-order">
    <i class="fas fa-list"></i>
    <span>Track Order</span>
</button>

<!-- Product Detail Modal -->
<div class="product-detail-modal" id="productModal">
    <div class="modal-content">
        <button class="modal-close" onclick="closeModal()">
            <i class="fas fa-times"></i>
        </button>
        <div class="modal-category" id="modalCategory">Pastry</div>
        <img src="" alt="" class="modal-product-image" id="modalImage">
        <h3 class="modal-product-name" id="modalName">Product Name</h3>
        <p class="modal-product-desc" id="modalDesc">Premium butter croissant with a crispy pastry crust and soft inside will melt away on your mouth</p>
        <div class="modal-product-price">$<span id="modalPrice">0.00</span></div>

        <textarea class="modal-notes" placeholder="Add notes to your order..." id="modalNotes"></textarea>

        <div class="modal-qty-control">
            <div class="modal-qty-buttons">
                <button class="modal-qty-btn" onclick="changeModalQty(-1)">
                    <i class="fas fa-minus"></i>
                </button>
                <div class="modal-qty-value" id="modalQty">1</div>
                <button class="modal-qty-btn" onclick="changeModalQty(1)">
                    <i class="fas fa-plus"></i>
                </button>
            </div>
        </div>

        <button class="modal-add-btn" onclick="addToCart()">
            Add to Cart ($<span id="modalTotalPrice">0.00</span>)
        </button>
    </div>
</div>

@section Scripts {
    <script src="~/js/Staff/pos.js"></script>
}