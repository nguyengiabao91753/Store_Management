<script>
    document.addEventListener("DOMContentLoaded", function () {
    var selects = document.querySelectorAll("select.kichhoat-select");
    selects.forEach(function (select) {
    changeClass(select);
    });
    });
    function changeClass(selectElement) {
    var selectedOption = selectElement.value;
    if (selectedOption === "true") {
    selectElement.classList.remove("badge-danger");
    selectElement.classList.add("badge-success");
    } else if (selectedOption === "false") {
    selectElement.classList.remove("badge-success");
    selectElement.classList.add("badge-danger");
    }
    $("table").click();
    }
</script>
}



<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Supplier</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Supplier</a></li>
                    <li class="breadcrumb-item active">List</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header ">
                        <a class="btn btn-outline-primary" asp-controller="supplier" asp-action="create">
                            + Add Supplier
                        </a>

                        <div class="dropdown float-right">
                            <button class="btn btn-outline-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Filter
                            </button>
                            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton">
                                <a class="dropdown-item" asp-controller="supplier" asp-action="index" asp-route-active="true">
                                    <i class="fas fa-check"></i> Show Active
                                </a>
                                <a class="dropdown-item" asp-controller="supplier" asp-action="index" asp-route-active="false">
                                    <i class="fas fa-trash-alt"></i> Show Deleted
                                </a>
                            </div>
                        </div>

                    </div>

                    <!-- /.card-header -->
                    <div class="card-body">
                        <table id="example1" class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Name</th>
                                    <th>Email</th>
                                    <th>Phone Number</th>
                                    <th>Address</th>
                                    <th width="170px">Hành động</th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var s in ViewBag.suppliers)
                                {
                                    <tr>
                                        <td>@s.SupplierId</td>
                                        <td>@s.Name</td>
                                        <td>@s.Email</td>
                                        <td>@s.Phone</td>
                                        <td>@s.Address</td>



                                        <td class="text-center">
                                            <div class="btn-group" role="group">
                                                <a asp-controller="supplier" asp-action="detail" asp-route-id="@s.SupplierId"
                                                class="btn btn-sm btn-outline-primary" data-toggle="tooltip" title="View Detail">
                                                    <i class="fas fa-eye"></i>
                                                </a>

                                                @if (s.Active == true)
                                                {
                                                    <a asp-controller="supplier" asp-action="edit" asp-route-id="@s.SupplierId"
                                                    class="btn btn-sm btn-outline-warning" data-toggle="tooltip" title="Edit Supplier">
                                                        <i class="fas fa-edit"></i>
                                                    </a>

                                                    <a asp-controller="supplier" asp-action="delete" asp-route-id="@s.SupplierId"
                                                    class="btn btn-sm btn-outline-danger" onclick="return confirmDelete()" data-toggle="tooltip" title="Delete Supplier">
                                                        <i class="fas fa-trash-alt"></i>
                                                    </a>
                                                }
                                                @if(s.Active == false)
                                                {
                                                    <a asp-controller="supplier" asp-action="restore" asp-route-id="@s.SupplierId"
                                                       class="btn btn-sm btn-outline-success" onclick="return confirmRestore()" data-toggle="tooltip" title="Restore Supplier">
                                                        <i class="fas fa-trash-restore"></i>
                                                    </a>
                                                }
                                            </div>
                                        </td>


                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>Id</th>
                                    <th>Name</th>
                                    <th>Email</th>
                                    <th>Phone Number</th>
                                    <th>Address</th>
                                    <th width="170px">Hành động</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->


            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</section>
