@{
    ViewData["Title"] = "Billing Queue";
}

@section csslinks {
    <link rel="stylesheet" href="~/css/BillingQueue.css" asp-append-version="true" />
}

<div class="container-fluid px-4 py-3">
    <div class="col-lg-12">
        <div class="card card-queue p-3 mb-3">
            <div class="d-flex justify-content-between align-items-center">
                <h6 class="mb-0">Billing Queue</h6>
                <div>
                    <button class="btn btn-outline-primary btn-sm">
                        4 Active Queue
                    </button>
                </div>
            </div>

            <div class="mt-3">
                <div class="d-flex justify-content-between py-2 border-bottom">
                    <div>
                        <strong>Francois</strong><br />
                        <small>Order #006 · Table: 06</small>
                    </div>
                    <div class="text-end">
                        <div class="fw-semibold">$20.00</div>
                        <span class="badge bg-info">Active</span>
                    </div>
                </div>

                <div class="d-flex justify-content-between py-2 border-bottom">
                    <div>
                        <strong>Eloise</strong><br />
                        <small>Order #005 · Table: 05</small>
                    </div>
                    <div class="text-end">
                        <div class="fw-semibold">$19.35</div>
                        <span class="badge bg-secondary">Closed</span>
                    </div>
                </div>

                <div class="d-flex justify-content-between py-2 border-bottom">
                    <div>
                        <strong>Mike</strong><br />
                        <small>Order #004 · Table: 04</small>
                    </div>
                    <div class="text-end">
                        <div class="fw-semibold">$25.00</div>
                        <span class="badge bg-info">Active</span>
                    </div>
                </div>
            </div>
        </div>

        <h6 class="mb-3">Track Order</h6>

        <div class="track-order-wrapper">
            <div class="track-order-header d-flex justify-content-between align-items-center mb-3">
                <div class="search-box d-flex align-items-center">
                    <input type="text" id="searchOrder" class="form-control form-control-sm" placeholder="Search order or name..." />
                    <button class="btn btn-light ms-2" id="searchBtn">
                        <i class="fa fa-search"></i>
                    </button>
                </div>
                <div class="nav-buttons d-flex">
                    <button class="btn btn-light me-2" id="scrollLeft">
                        <i class="fa fa-chevron-left"></i>
                    </button>
                    <button class="btn btn-light" id="scrollRight">
                        <i class="fa fa-chevron-right"></i>
                    </button>
                </div>
            </div>

            <div class="track-order-container" id="trackOrderContainer">
                <!-- JS sẽ render các card -->
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/BillingQueue.js" asp-append-version="true"></script>
}
