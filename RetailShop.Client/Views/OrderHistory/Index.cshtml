@{
    ViewData["Title"] = "Order History";
}

@section csslinks {
    <link rel="stylesheet" href="~/css/OrderHistory.css" asp-append-version="true" />
}

<section class="col-lg-12 col-md-8 content-area px-4 py-3">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h5 class="fw-semibold mb-0">
            Activity <small class="text-muted">/ Order History</small>
        </h5>
        <button class="btn btn-outline-primary">
            <i class="fa fa-download me-2"></i>Download
        </button>
    </div>

    <!-- Filter Bar -->
    <div class="filter-bar p-3 rounded-4 bg-white shadow-sm mb-4">
        <div class="row g-3 align-items-center">
            <div class="col-md-6 d-flex align-items-center">
                <label class="me-2 fw-semibold text-muted">Date:</label>
                <input type="date" class="form-control me-2" id="startDate" />
                <span class="text-muted">–</span>
                <input type="date" class="form-control ms-2" id="endDate" />
            </div>

            <div class="col-md-6 d-flex align-items-center justify-content-end">
                <label class="me-2 fw-semibold text-muted">Time:</label>
                <input type="time" class="form-control me-2" id="startTime" />
                <span class="text-muted">–</span>
                <input type="time" class="form-control ms-2" id="endTime" />
                <button class="btn btn-primary ms-3" id="searchBtn">
                    <i class="fa fa-search"></i>
                </button>
            </div>
        </div>
    </div>

    <!-- Table -->
    <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
        <div class="table-responsive">
            <table class="table align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th>#</th>
                        <th>Date & Time</th>
                        <th>Customer Name</th>
                        <th>Order Status</th>
                        <th>Total Payment</th>
                        <th>Payment</th>
                        <th>Orders</th>
                    </tr>
                </thead>
                <tbody id="orderTableBody">
                    <tr>
                        <td>001</td>
                        <td>25/05/2024 - 08:00 AM</td>
                        <td>George</td>
                        <td><span class="status done">Done</span></td>
                        <td>USD 35.00</td>
                        <td><span class="badge-status paid">Paid</span></td>
                        <td><a href="#" class="text-primary text-decoration-none">Detail</a></td>
                    </tr>
                    <tr>
                        <td>005</td>
                        <td>25/05/2024 - 08:42 AM</td>
                        <td>Eliza</td>
                        <td><span class="status canceled">Canceled</span></td>
                        <td>USD 12.25</td>
                        <td><span class="badge-status unpaid">Unpaid</span></td>
                        <td><a href="#" class="text-primary text-decoration-none">Detail</a></td>
                    </tr>
                    <tr>
                        <td>006</td>
                        <td>25/05/2024 - 09:00 AM</td>
                        <td>Jelly</td>
                        <td><span class="status done">Done</span></td>
                        <td>USD 64.00</td>
                        <td><span class="badge-status paid">Paid</span></td>
                        <td><a href="#" class="text-primary text-decoration-none">Detail</a></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</section>

@section Scripts {
    <script src="~/js/OrderHistory.js" asp-append-version="true"></script>
}
