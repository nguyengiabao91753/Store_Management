@{
    ViewData["Title"] = "Order History";
}

@section csslinks {
    <link rel="stylesheet" href="~/css/OrderHistory.css" asp-append-version="true" />
}

<section class="col-lg-12 col-md-8 content-area px-4 py-3">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h5 class="fw-semibold mb-0">
            Activity <small class="text-muted">/ Order History</small>
        </h5>
        <button class="btn btn-outline-primary">
            <i class="fa fa-download me-2"></i>Download
        </button>
    </div>

    <!-- Filter Bar -->
    <div class="filter-bar p-3 rounded-4 bg-white shadow-sm mb-4">
        <div class="row g-3 align-items-center">
            <div class="col-md-6 d-flex align-items-center">
                <label class="me-2 fw-semibold text-muted">Date:</label>
                <input type="date" class="form-control me-2" id="startDate" />
                <span class="text-muted">–</span>
                <input type="date" class="form-control ms-2" id="endDate" />
            </div>

            <div class="col-md-6 d-flex align-items-center justify-content-end">
                <label class="me-2 fw-semibold text-muted">Time:</label>
                <input type="time" class="form-control me-2" id="startTime" />
                <span class="text-muted">–</span>
                <input type="time" class="form-control ms-2" id="endTime" />
                <button class="btn btn-primary ms-3" id="searchBtn">
                    <i class="fa fa-search"></i>
                </button>
            </div>
        </div>
    </div>

    <!-- Table -->
    <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
        <div class="table-responsive">
			<table class="table align-middle mb-0">
				<thead class="table-light text-center">
                    <tr>
                        <th>#</th>
                        <th>Date & Time</th>
                        <th>Customer Name</th>
                        <th>Order Status</th>
                        <th>Total Payment</th>
                        <th>Payment</th>
                        <th>Orders</th>
                    </tr>
                </thead>
				<tbody id="orderTableBody">

					@foreach (var order in ViewBag.orders)
					{
						<tr>
							<td>@order.OrderId</td>
							<td>@(order.OrderDate != null ? ((DateTime)order.OrderDate).ToString("dd/MM/yyyy - hh:mm tt") : "-")</td>
							<td>@order.CustomerName</td>
							<td>
								@if (order.OrderStatus == "Done")
								{
									<span class="status done">Done</span>
								}
								else if (order.OrderStatus == "Canceled")
								{
									<span class="status canceled">Canceled</span>
								}
								else
								{
									<span class="status pending">Pending</span>
								}
							</td>
							<td>VND @order.TotalPayment.ToString("F2")</td>
							<td>
								@if (order.PaymentStatus == "Paid")
								{
									<span class="badge-status paid">Paid</span>
								}
								else
								{
									<span class="badge-status unpaid">Unpaid</span>
								}
							</td>
							<td><a asp-controller="OrderHistory" asp-action="Details" asp-route-id="@order.OrderId" class="text-primary text-decoration-none">Detail</a></td>
						</tr>
					}
				</tbody>
            </table>
        </div>
    </div>
</section>

@section Scripts {
    <script src="~/js/OrderHistory.js" asp-append-version="true"></script>
}
