@model RetailShop.Client.Models.Order
@{
    ViewData["Title"] = "Order Details";

    var status = Model.Status?.ToLower() ?? "pending";
    var statusClass = status == "canceled" ? "canceled" : (status == "done" || status == "paid" ? "done" : "pending");
    var isPaid = Model.Payment != null;

    decimal subtotal = Model.OrderItems?.Sum(oi => oi.Subtotal ?? (oi.Price * oi.Quantity)) ?? 0m;
    decimal discount = Model.DiscountAmount ?? 0m;
    decimal total = Model.TotalAmount ?? (subtotal - discount);
}

@section csslinks {
    <link rel="stylesheet" href="~/css/OrderHistory.css" asp-append-version="true" />
}

<section class="col-lg-12 col-md-8 content-area px-4 py-3">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h5 class="fw-semibold mb-0">
            Activity <small class="text-muted">/ Order History / Details</small>
        </h5>
        <div class="d-flex gap-2">
            <a class="btn btn-outline-secondary" asp-controller="OrderHistory" asp-action="Index">
                <i class="fa fa-arrow-left me-2"></i>Back
            </a>
            <button class="btn btn-outline-primary">
                <i class="fa fa-download me-2"></i>Download
            </button>
        </div>
    </div>

    <div class="row g-3 mb-4">
        <div class="col-lg-6">
            <div class="card border-0 shadow-sm rounded-4 p-3 h-100">
                <div class="d-flex justify-content-between align-items-start mb-2">
                    <div>
                        <div class="text-muted small">Order</div>
                        <div class="fs-5 fw-semibold">#@Model.OrderId</div>
                    </div>
                    <span class="status @statusClass text-capitalize">@Model.Status</span>
                </div>
                <div class="text-muted small">Date &amp; Time</div>
                <div class="mb-2">
                    @(Model.OrderDate?.ToString("dd/MM/yyyy - hh:mm tt") ?? "-")
                </div>
                <div class="text-muted small">Customer</div>
                <div class="mb-2">
                    @(Model.Customer?.Name ?? "Walk-in") @((Model.Customer?.Phone != null) ? $" · {Model.Customer.Phone}" : "")
                </div>
                <div class="text-muted small">Payment</div>
                <div>
                    @if (isPaid)
                    {
                        <span class="badge-status paid">Paid</span>
                        <span class="text-muted small ms-2">
                            @Model.Payment?.PaymentMethod · @Model.Payment?.PaymentDate?.ToString("dd/MM/yyyy hh:mm tt")
                        </span>
                    }
                    else
                    {
                        <span class="badge-status unpaid">Unpaid</span>
                    }
                </div>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="card border-0 shadow-sm rounded-4 p-3 h-100">
                <div class="d-flex justify-content-between align-items-center mb-2">
                    <div class="text-muted small">Subtotal</div>
                    <div>VND @subtotal.ToString("F2")</div>
                </div>
                <div class="d-flex justify-content-between align-items-center mb-2">
                    <div class="text-muted small">Discount</div>
                    <div>VND @discount.ToString("F2")</div>
                </div>
                <hr class="my-2" />
                <div class="d-flex justify-content-between align-items-center">
                    <div class="fw-semibold">Total</div>
                    <div class="fw-semibold">VND @total.ToString("F2")</div>
                </div>
            </div>
        </div>
    </div>

    <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
        <div class="table-responsive">
			<table class="table align-middle mb-0">
				<thead class="table-light text-center">
                    <tr>
						<th>Product</th>
						<th class="text-center">Price</th>
						<th class="text-center">Qty</th>
						<th class="text-center">Subtotal</th>
                    </tr>
                </thead>
                <tbody>
                @if (Model.OrderItems != null && Model.OrderItems.Any())
                {
                    foreach (var item in Model.OrderItems)
                    {
                        <tr>
                            <td>@(item.Product?.ProductName ?? $"SKU #{item.ProductId}")</td>
                            <td class="text-end">VND @item.Price.ToString("F2")</td>
                            <td class="text-end">@item.Quantity</td>
							<td class="text-end">VND @( (item.Subtotal ?? (item.Price * item.Quantity)).ToString("F2") )</td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="4" class="text-center text-muted py-4">No items found</td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</section>