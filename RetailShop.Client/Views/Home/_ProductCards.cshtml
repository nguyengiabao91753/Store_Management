@model IEnumerable<RetailShop.Client.Models.Product>

@foreach (var product in Model)
{
    <div class="col-md-4 col-lg-3">
        <div class="card h-100 shadow-sm">
            <img src="@product.ProductImage" alt="@product.ProductName"
                 class="card-img-top img-fluid"
                 style="object-fit:contain;width:100%;background-color:#ffffff;" />

            <div class="card-body d-flex flex-column">
                <h6 class="fw-bold mb-1">@product.ProductName</h6>
                <div class="mt-auto d-flex justify-content-between align-items-center">
                    <span class="fw-bold text-primary">@product.Price.ToString("C")</span>
                    <button class="btn btn-sm btn-outline-primary add-to-cart-btn"
                            data-id="@product.ProductId"
                            data-name="@product.ProductName"
                            data-price="@product.Price"
                            data-image="@product.ProductImage">
                        <i class="fa fa-cart-plus"></i>
                    </button>
                </div>
            </div>
        </div>
    </div>
}
