@using RetailShop.Blazor.Services.IServices
@using RetailShop.Blazor.Dtos
@inject IAuthService AuthService
@inject NavigationManager Navigation

@implements IDisposable

<div class="user-profile-dropdown">
    @if (isAuthenticated && currentUser != null)
    {
        <button class="user-profile-btn" @onclick="ToggleDropdown">
            <div class="user-avatar">
                <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                    <circle cx="12" cy="7" r="4"></circle>
                </svg>
            </div>
            <div class="user-info">
                <span class="user-name">@currentUser.FullName</span>
                <span class="user-role">@GetRoleDisplay(currentUser.Role)</span>
            </div>
            <svg class="dropdown-arrow @(isDropdownOpen ? "open" : "")" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <polyline points="6 9 12 15 18 9"></polyline>
            </svg>
        </button>

        @if (isDropdownOpen)
        {
            <div class="user-dropdown-menu" @onclick:stopPropagation="true">
                <div class="dropdown-header">
                    <div class="user-avatar-large">
                        <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                            <circle cx="12" cy="7" r="4"></circle>
                        </svg>
                    </div>
                    <div class="user-details">
                        <h4>@currentUser.FullName</h4>
                        <p>@currentUser.Username</p>
                        <span class="user-role-badge">@GetRoleDisplay(currentUser.Role)</span>
                    </div>
                </div>

                <div class="dropdown-divider"></div>

                <div class="dropdown-items">
                    <a href="/profile" class="dropdown-item" @onclick="CloseDropdown">
                        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                            <circle cx="12" cy="7" r="4"></circle>
                        </svg>
                        <span>Thông tin tài khoản</span>
                    </a>

                    <a href="/settings" class="dropdown-item" @onclick="CloseDropdown">
                        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <circle cx="12" cy="12" r="3"></circle>
                            <path d="M19.4 15a1.65 1.65 0 0 0 .33 1.82l.06.06a2 2 0 0 1 0 2.83 2 2 0 0 1-2.83 0l-.06-.06a1.65 1.65 0 0 0-1.82-.33 1.65 1.65 0 0 0-1 1.51V21a2 2 0 0 1-2 2 2 2 0 0 1-2-2v-.09A1.65 1.65 0 0 0 9 19.4a1.65 1.65 0 0 0-1.82.33l-.06.06a2 2 0 0 1-2.83 0 2 2 0 0 1 0-2.83l.06-.06a1.65 1.65 0 0 0 .33-1.82 1.65 1.65 0 0 0-1.51-1H3a2 2 0 0 1-2-2 2 2 0 0 1 2-2h.09A1.65 1.65 0 0 0 4.6 9a1.65 1.65 0 0 0-.33-1.82l-.06-.06a2 2 0 0 1 0-2.83 2 2 0 0 1 2.83 0l.06.06a1.65 1.65 0 0 0 1.82.33H9a1.65 1.65 0 0 0 1 1.51V6a2 2 0 0 1 2-2 2 2 0 0 1 2 2v.09a1.65 1.65 0 0 0 1 1.51 1.65 1.65 0 0 0 1.82-.33l.06-.06a2 2 0 0 1 2.83 0 2 2 0 0 1 0 2.83l-.06.06a1.65 1.65 0 0 0-.33 1.82V9a1.65 1.65 0 0 0 1.51 1H21a2 2 0 0 1 2 2 2 2 0 0 1-2 2h-.09a1.65 1.65 0 0 0-1.51 1z"></path>
                        </svg>
                        <span>Cài đặt</span>
                    </a>

                    @if (currentUser.Role == "admin")
                    {
                        <div class="dropdown-divider"></div>
                        <a href="/admin" class="dropdown-item" @onclick="CloseDropdown">
                            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
                                <circle cx="8.5" cy="8.5" r="1.5"></circle>
                                <path d="M21 15l-5-5L5 21"></path>
                            </svg>
                            <span>@GetRoleDisplay(currentUser.Role)</span>
                        </a>
                    }
                </div>

                <div class="dropdown-divider"></div>

                <div class="dropdown-items">
                    <button class="dropdown-item logout-item" @onclick="HandleLogout">
                        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"></path>
                            <polyline points="16 17 21 12 16 7"></polyline>
                            <line x1="21" y1="12" x2="9" y2="12"></line>
                        </svg>
                        <span>Đăng xuất</span>
                    </button>
                </div>
            </div>
        }
    }
    else
    {
        <div class="auth-actions">
            <a href="/login" class="auth-btn auth-btn-primary">Đăng nhập</a>
            <a href="/register" class="auth-btn auth-btn-primary">Đăng ký</a>
        </div>
    }
</div>

@code {
    private bool isAuthenticated = false;
    private UserDto? currentUser = null;
    private bool isDropdownOpen = false;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await LoadUserInfo();
            await JS.InvokeVoidAsync("console.log", $"[UserProfile] Render lần đầu: isAuthenticated={isAuthenticated}, currentUser={{username={currentUser?.Username}, role={currentUser?.Role}}}");
            StateHasChanged();
        }
    }

    protected override void OnInitialized()
    {
        // Subscribe to auth state changes so the UI updates immediately after login/logout
        AuthService.OnAuthStateChanged += AuthStateChangedHandler;
    }

    private void AuthStateChangedHandler()
    {
        _ = InvokeAsync(async () =>
        {
            await JS.InvokeVoidAsync("console.log", "[UserProfile] Nhận event OnAuthStateChanged, gọi LoadUserInfo");
            await LoadUserInfo();
            StateHasChanged();
        });
    }

    [Inject] private IJSRuntime JS { get; set; }

    private async Task LoadUserInfo()
    {
        await JS.InvokeVoidAsync("console.log", "[UserProfile] Gọi LoadUserInfo");
        // First try server-side auth service (may be populated if same circuit)
        isAuthenticated = await AuthService.IsAuthenticatedAsync();
        currentUser = AuthService.CurrentUser;

        // If AuthService doesn't have user (different circuit), fall back to reading localStorage directly on client
        if (!isAuthenticated || currentUser == null)
        {
            try
            {
                var userJson = await JS.InvokeAsync<string>("authInterop.getCurrentUser");
                await JS.InvokeVoidAsync("console.log", $"[UserProfile] Fallback read localStorage currentUser: {userJson}");
                if (!string.IsNullOrEmpty(userJson))
                {
                    try
                    {
                        var fromClient = System.Text.Json.JsonSerializer.Deserialize<UserDto>(userJson, new System.Text.Json.JsonSerializerOptions { PropertyNameCaseInsensitive = true });
                        if (fromClient != null)
                        {
                            currentUser = fromClient;
                            isAuthenticated = true;
                        }
                    }
                    catch (Exception ex)
                    {
                        await JS.InvokeVoidAsync("console.error", "[UserProfile] Error deserializing currentUser from localStorage: " + ex.Message);
                    }
                }
            }
            catch (Exception ex)
            {
                await JS.InvokeVoidAsync("console.error", "[UserProfile] authInterop.getCurrentUser failed: " + ex.Message);
            }
        }

        await JS.InvokeVoidAsync("console.log", $"[UserProfile] Sau LoadUserInfo: isAuthenticated={isAuthenticated}, currentUser={{username={currentUser?.Username}, role={currentUser?.Role}}}");
    }

    private void ToggleDropdown()
    {
        isDropdownOpen = !isDropdownOpen;
    }

    private void CloseDropdown()
    {
        isDropdownOpen = false;
    }

    private async Task HandleLogout()
    {
        await AuthService.LogoutAsync();
        isAuthenticated = false;
        currentUser = null;
        isDropdownOpen = false;
        Navigation.NavigateTo("/", true);
    }

    private string GetRoleDisplay(string role)
    {
        return role switch
        {
            "admin" => "Quản trị viên",
            "staff" => "Nhân viên",
            _ => "Khách hàng"
        };
    }

    // Handle clicks outside component to close dropdown
    [JSInvokable]
    public void CloseDropdownFromJs()
    {
        isDropdownOpen = false;
        StateHasChanged();
    }

    public void Dispose()
    {
        AuthService.OnAuthStateChanged -= AuthStateChangedHandler;
    }
}
