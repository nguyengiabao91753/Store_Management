@using RetailShop.Blazor.Services.IServices
@using RetailShop.Blazor.Services
@using RetailShop.Blazor.Dtos
@inject ICustomerAuthService CustomerAuthService
@inject CustomerStateService CustomerStateService
@inject NavigationManager Navigation

@implements IDisposable
@rendermode InteractiveServer

<div class="user-profile-dropdown" style="position: relative; display: inline-block;">
    @if (isAuthenticated && currentCustomer != null)
    {
        <button class="user-profile-btn" @onclick="ToggleDropdown">
            <div class="user-avatar">
                <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                    <circle cx="12" cy="7" r="4"></circle>
                </svg>
            </div>
            <div class="user-info">
                <span class="user-name">@currentCustomer.Name</span>
                <span class="user-role">Khách hàng</span>
            </div>
            <svg class="dropdown-arrow @(isDropdownOpen ? "open" : "")" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <polyline points="6 9 12 15 18 9"></polyline>
            </svg>
        </button>

        @if (isDropdownOpen)
        {
            <div class="user-dropdown-menu" style="display: block; position: absolute; top: calc(100% + 8px); right: 0; width: 280px; background: white; border: 1px solid #e5e7eb; border-radius: 12px; box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1); z-index: 1000;" @onclick:stopPropagation="true">
                <div class="dropdown-header">
                    <div class="user-avatar-large">
                        <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                            <circle cx="12" cy="7" r="4"></circle>
                        </svg>
                    </div>
                    <div class="user-details">
                        <h4>@currentCustomer.Name</h4>
                        <p>@currentCustomer.Email</p>
                        <span class="user-role-badge">Khách hàng</span>
                    </div>
                </div>

                <div class="dropdown-divider"></div>

                <div class="dropdown-items">
                    <a href="/profile" class="dropdown-item" @onclick="CloseDropdown">
                        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                            <circle cx="12" cy="7" r="4"></circle>
                        </svg>
                        <span>Thông tin tài khoản</span>
                    </a>

                    <a href="/orders" class="dropdown-item" @onclick="CloseDropdown">
                        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                        </svg>
                        <span>Đơn hàng của tôi</span>
                    </a>

                    <a href="/settings" class="dropdown-item" @onclick="CloseDropdown">
                        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <circle cx="12" cy="12" r="3"></circle>
                            <path d="M19.4 15a1.65 1.65 0 0 0 .33 1.82l.06.06a2 2 0 0 1 0 2.83 2 2 0 0 1-2.83 0l-.06-.06a1.65 1.65 0 0 0-1.82-.33 1.65 1.65 0 0 0-1 1.51V21a2 2 0 0 1-2 2 2 2 0 0 1-2-2v-.09A1.65 1.65 0 0 0 9 19.4a1.65 1.65 0 0 0-1.82.33l-.06.06a2 2 0 0 1-2.83 0 2 2 0 0 1 0-2.83l.06-.06a1.65 1.65 0 0 0 .33-1.82 1.65 1.65 0 0 0-1.51-1H3a2 2 0 0 1-2-2 2 2 0 0 1 2-2h.09A1.65 1.65 0 0 0 4.6 9a1.65 1.65 0 0 0-.33-1.82l-.06-.06a2 2 0 0 1 0-2.83 2 2 0 0 1 2.83 0l.06.06a1.65 1.65 0 0 0 1.82.33H9a1.65 1.65 0 0 0 1 1.51V6a2 2 0 0 1 2-2 2 2 0 0 1 2 2v.09a1.65 1.65 0 0 0 1 1.51 1.65 1.65 0 0 0 1.82-.33l.06-.06a2 2 0 0 1 2.83 0 2 2 0 0 1 0 2.83l-.06.06a1.65 1.65 0 0 0-.33 1.82V9a1.65 1.65 0 0 0 1.51 1H21a2 2 0 0 1 2 2 2 2 0 0 1-2 2h-.09a1.65 1.65 0 0 0-1.51 1z"></path>
                        </svg>
                        <span>Cài đặt</span>
                    </a>
                </div>

                <div class="dropdown-divider"></div>

                <div class="dropdown-items">
                    <button class="dropdown-item logout-item" @onclick="HandleLogout">
                        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"></path>
                            <polyline points="16 17 21 12 16 7"></polyline>
                            <line x1="21" y1="12" x2="9" y2="12"></line>
                        </svg>
                        <span>Đăng xuất</span>
                    </button>
                </div>
            </div>
        }
    }
    else
    {
        <div class="auth-actions">
            <a href="/login" class="auth-btn auth-btn-primary">Đăng nhập</a>
            <a href="/register" class="auth-btn auth-btn-primary">Đăng ký</a>
        </div>
    }
</div>

@code {
    private bool isAuthenticated = false;
    private CustomerDto? currentCustomer = null;
    private bool isDropdownOpen = false;

    [Inject] private IJSRuntime JS { get; set; } = default!;

    protected override async Task OnInitializedAsync()
    {
        Console.WriteLine("UserProfile OnInitializedAsync called");
        
        // Subscribe to state changes
        CustomerStateService.OnStateChanged += OnStateChanged;
        
        // Initialize with current state
        isAuthenticated = CustomerStateService.IsAuthenticated;
        currentCustomer = CustomerStateService.CurrentCustomer;
        
        Console.WriteLine($"Initial state - isAuthenticated: {isAuthenticated}, customer: {currentCustomer?.Name}");
        
        // If state service is empty, try to load from localStorage
        if (!isAuthenticated)
        {
            await LoadCustomerInfoFromStorage();
        }
    }

    private async void OnStateChanged()
    {
        isAuthenticated = CustomerStateService.IsAuthenticated;
        currentCustomer = CustomerStateService.CurrentCustomer;
        await InvokeAsync(StateHasChanged);
    }

    private async Task LoadCustomerInfoFromStorage()
    {
        try
        {
            var isAuth = await CustomerAuthService.IsAuthenticatedAsync();
            if (isAuth)
            {
                var customer = await CustomerAuthService.GetCustomerProfileAsync();
                if (customer != null)
                {
                    CustomerStateService.SetCustomer(customer);
                }
            }
        }
        catch
        {
            // Ignore errors during initial load
        }
    }

    private void ToggleDropdown()
    {
        isDropdownOpen = !isDropdownOpen;
        Console.WriteLine($"Dropdown toggled: {isDropdownOpen}");
        StateHasChanged();
    }

    private void CloseDropdown()
    {
        isDropdownOpen = false;
    }

    private async Task HandleLogout()
    {
        await CustomerAuthService.LogoutAsync();
        isAuthenticated = false;
        currentCustomer = null;
        isDropdownOpen = false;
        Navigation.NavigateTo("/", true);
    }

    // Handle clicks outside component to close dropdown
    [JSInvokable]
    public void CloseDropdownFromJs()
    {
        isDropdownOpen = false;
        StateHasChanged();
    }

    public void Dispose()
    {
        CustomerStateService.OnStateChanged -= OnStateChanged;
    }
}
